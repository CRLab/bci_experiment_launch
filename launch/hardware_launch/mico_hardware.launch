<launch>

    <arg name="use_robot_hw" default="False"/>

    <node name="jaco_arm_driver" pkg="jaco_driver"  type="jaco_arm_driver" output="screen" cwd="node" if="$(arg use_robot_hw)"/>

    <node pkg="tf" type="static_transform_publisher" name="world_to_root" args=".034, .426, .113, .050, -.033, -.001 /world /root 100" />
    <node pkg="tf" type="static_transform_publisher" name="hand_to_approach" args= "0, 0, 0, 0, 0, -1.57079632679, 1.57079632679 mico_link_hand approach_tran_frame 100" />

    <include file="$(find checkerboard_detection)/launch/mico_4x4_board.launch" />

    <node name="jaco_tf_updater" pkg="jaco_driver" type="jaco_tf_updater" output="screen" cwd="node">
        <param name="tf_prefix" value="mico_" />
        <remap from="/jaco_tf_updater/in/joint_angles" to="/jaco_arm_driver/out/joint_angles"/>
    </node>
    <rosparam param="robot_description_planning/default_robot_padding">
      .01
    </rosparam>

    <param name="robot_description" command="$(find xacro)/xacro.py '$(find jaco_model)/urdf/standalone_mico_arm.xacro'" />

    <!-- include line for moveit <include file="$(find mico_moveit_config)/launch/mico_moveit.launch"/> -->

    <node name="robot_state_pub" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
        <remap from="/joint_states" to="/jaco_arm_driver/out/joint_state"/>
    </node>
</launch>
