<launch>
    <arg name="use_robot_hw" default="False"/>
    
    <!--<machine name="fraser" address="192.168.11.64" env-loader="/home/jweisz/Dev/jaco_ws/devel/env.sh" default="never" user="jweisz">-->
<machine name="fraser" address="192.168.11.64" default="never" user="jweisz" env-loader="/home/jweisz/Dev/jaco_ws/devel/env.sh">
    </machine>

    <include file="$(find jaco_driver)/launch/mico_arm.launch" if="$(arg use_robot_hw)">
    	     <arg name="use_urdf" value="true"/>
	     <!--<arg name="machine_name" value="fraser"/>-->
    </include>

    <node pkg="lcsr_tf_tools" type="interactive_transform_publisher" name="world_to_root" args="-0.428419977427 -0.0104811433703 0.04  0.00173236731355 0.0148199068154 -0.0147034455073 0.999780564902 /world /root 100"/>

    <node pkg="tf" type="static_transform_publisher" name="hand_to_approach" args= "0, 0, 0, 0, 0, -1.57079632679, 1.57079632679 mico_link_hand approach_tran 100" />

    <include file="$(find checkerboard_detection)/launch/kinect_camerapose.launch" >
    	     <arg name="checkerboard_width" value="7"/>
	     <arg name="checkerboard_height" value="4"/>
	     <arg name="checkerboard_box_width" value="-0.03125"/>
	     <arg name="checkerboard_box_height" value="0.03125"/>
    </include>


    <node name="robot_state_pub" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" unless="$(arg use_robot_hw)">
        <remap from="joint_states" to="/mico_arm_driver/out/joint_state"/> 
    </node>
</launch>
